account jbw
host smtp.webfaction.com
port 587
protocol smtp
auth on
passwordeval eval $(keychain --eval 2>/dev/null) && gpg --no-tty -qd ~/.mutt/passwd/jbw.gpg
from me@josephweston.org
user me@josephweston.org
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

