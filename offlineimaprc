[general]
ui = ttyui
accounts = GMail, JBW, TUDelft
pythonfile = ~/.mutt/get_pass.py

[Account GMail]
localrepository = GMail-Local
remoterepository = GMail-Remote

[Account JBW]
localrepository = JBW-Local
remoterepository = JBW-Remote

[Account TUDelft]
localrepository = TUDelft-Local
remoterepository = TUDelft-Remote

[Repository GMail-Local]
type = Maildir
localfolders = ~/priv/mail/GMail

[Repository JBW-Local]
type = Maildir
localfolders = ~/priv/mail/JBW

[Repository TUDelft-Local]
type = Maildir
localfolders = ~/work/mail/TUDelft

[Repository GMail-Remote]
type = Gmail
ssl = yes
remoteuser = joseph.weston08@gmail.com
remotepasseval = get_pass("email/gmail")
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail', '[Gmail]/Important']
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository JBW-Remote]
type = IMAP
ssl = yes
remotehost = mail.webfaction.com
remoteuser = jbw
remotepasseval = get_pass("email/jbw")
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda f: f.startswith('INBOX') or f in ['Drafts', 'Sent' 'Trash', 'Archive']
